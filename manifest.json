{
  "manifest_version": 3,
  "name": "SayOutLoud",
  "version": "3.3.0",
  "description": "Speak selected text",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "sayoutloud.ffaddon@23.tf",
      "strict_min_version": "112.0",
      "update_url": "https://raw.githubusercontent.com/nbr23/sayoutloud/refs/heads/master/updates.json"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "commands": {
    "speak-selected-text": {
      "suggested_key": {
        "default": "Ctrl+F8",
        "mac": "Command+F8"
      },
      "description": "SayOutLoud"
    }
  }
}